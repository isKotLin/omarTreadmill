<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my60dp"
        android:background="@color/colorBlack">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/HRC"
            android:textSize="@dimen/my30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relative_HrcDialog"
        android:layout_width="@dimen/my680dp"
        android:layout_height="@dimen/my340dp"
        android:layout_marginLeft="@dimen/my160dp"
        android:layout_centerVertical="true"
        android:background="@color/colorBlack">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray">
            <TextView
                android:layout_width="@dimen/my0dp"
                android:layout_height="@dimen/my60dp"
                android:layout_weight="1"
                android:background="@color/colorBlack2"
                android:gravity="center"
                android:text="@string/Age_Years"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/my20dp" />

            <ImageView
                android:layout_width="@dimen/my20dp"
                android:layout_height="@dimen/my60dp"
                android:src="@drawable/heart_rate"
                android:background="@color/colorBlack2" />

            <TextView
                android:layout_width="@dimen/my0dp"
                android:layout_height="@dimen/my60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorBlack2"
                android:text="@string/HeartRate"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/my20dp"
                android:id="@+id/textView"/>

            <TextView
                android:layout_width="@dimen/my0dp"
                android:layout_height="@dimen/my60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorBlack2"
                android:text="@string/Time"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/my20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thumb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my60dp"
            android:layout_marginTop="@dimen/my70dp">

            <CheckedTextView
                android:id="@+id/tv_age1"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:background="@color/colorBlack"
                android:textSize="@dimen/my80dp"
                android:text="0"
                android:textColor="@color/colorWhite" />

            <CheckedTextView
                android:id="@+id/tv_age2"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:background="@color/colorBlack"
                android:textSize="@dimen/my80dp"
                android:text="0"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my70dp"
            android:layout_centerHorizontal="true">

            <CheckedTextView
                android:id="@+id/tv_hrc1"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorWhite" />

            <CheckedTextView
                android:id="@+id/tv_hrc2"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:background="@color/colorBlack"
                android:text="0"
                android:textColor="@color/colorWhite" />

            <CheckedTextView
                android:id="@+id/tv_hrc3"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:background="@color/colorBlack"
                android:text="0"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/my60dp"
            android:layout_marginTop="@dimen/my70dp"
            android:layout_alignParentRight="true">

            <CheckedTextView
                android:id="@+id/tv_min1"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:background="@color/colorBlack"
                android:text="0"
                android:textColor="@color/colorWhite" />

            <CheckedTextView
                android:id="@+id/tv_min2"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:background="@color/colorBlack"
                android:text="0"
                android:textColor="@color/colorWhite" />/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumb1"
            android:gravity="center"
            android:layout_marginTop="@dimen/my30dp"
            android:text="@string/HrcRange"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/my18dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/my80dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_hrcModeAdd"
                android:layout_width="@dimen/my340dp"
                android:layout_height="@dimen/my90dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBlack2">

                <ImageView
                    android:layout_width="@dimen/my40dp"
                    android:layout_height="@dimen/my40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_add" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_hrcModeSub"
                android:layout_width="@dimen/my340dp"
                android:layout_height="@dimen/my90dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/btn_hrcModeAdd"
                android:background="@color/colorBlack2">

                <ImageView
                    android:layout_width="@dimen/my40dp"
                    android:layout_height="@dimen/my40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_sub" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/hrc_Start_Run"
        android:layout_width="@dimen/my160dp"
        android:layout_height="@dimen/my78dp"
        android:layout_marginLeft="@dimen/my10dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:text="@string/Start"
        android:textSize="@dimen/my24dp"
        android:layout_alignBottom="@+id/Relative_HrcDialog"
        android:layout_toEndOf="@+id/Relative_HrcDialog"
        android:layout_marginStart="18dp" />
</RelativeLayout>