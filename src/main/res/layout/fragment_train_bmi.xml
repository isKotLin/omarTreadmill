<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Relative_bmiDialog"
        android:layout_width="@dimen/my600dp"
        android:layout_height="@dimen/my300dp"
        android:layout_marginLeft="@dimen/my160dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="@dimen/my130dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray">
            <TextView
                android:layout_width="@dimen/my0dp"
                android:layout_height="@dimen/my60dp"
                android:layout_weight="1"
                android:background="@color/colorBlack2"
                android:gravity="center"
                android:text="@string/Age_Years"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/my24dp"
                android:paddingRight="@dimen/my40dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/my0dp"
                android:layout_height="@dimen/my60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorBlack2"
                android:text="@string/Height_inch"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/my24dp"/>

            <TextView
                android:layout_width="@dimen/my0dp"
                android:layout_height="@dimen/my60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorBlack2"
                android:text="@string/Weight_Ib"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/my24dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thumb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my20dp"
            android:layout_marginTop="@dimen/my70dp">

            <CheckedTextView
                android:id="@+id/tv1_age"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/my20dp"
                android:background="@color/colorBlack"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:text="0"
                android:textColor="@color/colorWhite" />

            <CheckedTextView
                android:id="@+id/tv2_age"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/my20dp"
                android:background="@color/colorBlack"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:text="0"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my70dp"
            android:layout_centerHorizontal="true">

            <CheckedTextView
                android:id="@+id/tv1_height"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:layout_marginTop="@dimen/my20dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorWhite" />

            <CheckedTextView
                android:id="@+id/tv2_height"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/my20dp"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorWhite" />

            <CheckedTextView
                android:id="@+id/tv3_height"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/my20dp"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/my10dp"
            android:layout_marginTop="@dimen/my70dp"
            android:layout_alignParentRight="true">

            <CheckedTextView
                android:id="@+id/tv1_weight"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/my20dp"
                android:background="@color/colorBlack"
                android:textStyle="bold"
                android:typeface="sans"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/my80dp" />

            <CheckedTextView
                android:id="@+id/tv2_weight"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/my20dp"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:background="@color/colorBlack"
                android:text="0"
                android:textColor="@color/colorWhite" />
            <CheckedTextView
                android:id="@+id/tv3_weight"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/my20dp"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:background="@color/colorBlack"
                android:text="0"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/my80dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_BmiAdd"
                android:layout_width="@dimen/my300dp"
                android:layout_height="@dimen/my90dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBlack2">

                <ImageView
                    android:layout_width="@dimen/my40dp"
                    android:layout_height="@dimen/my40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_add" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_BmiSub"
                android:layout_width="@dimen/my300dp"
                android:layout_height="@dimen/my90dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/btn_BmiAdd"
                android:background="@color/colorBlack2">

                <ImageView
                    android:layout_width="@dimen/my40dp"
                    android:layout_height="@dimen/my40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_sub" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/BMI_Start_Run"
        android:layout_width="@dimen/my200dp"
        android:layout_height="@dimen/my300dp"
        android:layout_marginLeft="@dimen/my10dp"
        android:layout_marginTop="@dimen/my130dp"
        android:layout_toRightOf="@+id/Relative_bmiDialog"
        android:background="@color/colorBlack"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/my50dp"
            android:text="@string/Gender"
            android:textSize="@dimen/my24dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:background="@color/colorBlack3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/my172dp">
            <ImageView
                android:id="@+id/img_male"
                android:layout_width="@dimen/my0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/male"
                android:padding="@dimen/my15dp"/>
            <ImageView
                android:id="@+id/img_female"
                android:layout_width="@dimen/my0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/female"
                android:padding="@dimen/my15dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/bt_scaleBMI"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my78dp"
            android:background="@color/colorGreen"
            android:text="@string/OK2"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/my28dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/bmi_toast"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my30dp"
        android:layout_below="@+id/Relative_bmiDialog"
        android:gravity="center"
        android:layout_marginTop="@dimen/my10dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/my18dp"/>
</RelativeLayout>