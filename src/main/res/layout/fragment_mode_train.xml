<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/my720dp"
        android:layout_height="@dimen/my180dp"
        android:layout_marginBottom="@dimen/my40dp">
        <RelativeLayout
            android:id="@+id/btn_train_default"
            android:layout_width="@dimen/my0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/my8dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorOrange">
            <ImageView
                android:id="@+id/icon_train_system"
                android:layout_width="@dimen/my50dp"
                android:layout_height="@dimen/my50dp"
                android:layout_marginTop="@dimen/my28dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/program_mode"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/my50dp"
                android:layout_below="@+id/icon_train_system"
                android:layout_marginTop="@dimen/my15dp"
                android:text="@string/Program"
                android:textSize="@dimen/my16dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_train_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/my8dp"
            android:gravity="center"
            android:text="English"
            android:textSize="@dimen/my28dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen">
            <ImageView
                android:id="@+id/icon_train_user"
                android:layout_width="@dimen/my50dp"
                android:layout_height="@dimen/my50dp"
                android:layout_marginTop="@dimen/my28dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user_trainning_mode"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/my50dp"
                android:layout_below="@+id/icon_train_user"
                android:layout_marginTop="@dimen/my15dp"
                android:text="@string/Customization"
                android:textSize="@dimen/my16dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_train_heart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/my8dp"
            android:gravity="center"
            android:text="Portugues"
            android:textSize="@dimen/my28dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorViolet" >
            <ImageView
                android:id="@+id/icon_train_heart"
                android:layout_width="@dimen/my50dp"
                android:layout_height="@dimen/my50dp"
                android:layout_marginTop="@dimen/my28dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/hrc_mode"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/my50dp"
                android:layout_below="@+id/icon_train_heart"
                android:layout_marginTop="@dimen/my15dp"
                android:text="@string/HRC"
                android:textSize="@dimen/my16dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_train_BMI"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue">
            <ImageView
                android:id="@+id/icon_train_Measurements"
                android:layout_width="@dimen/my50dp"
                android:layout_height="@dimen/my50dp"
                android:layout_marginTop="@dimen/my28dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bmi_mode"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/my50dp"
                android:layout_below="@+id/icon_train_Measurements"
                android:layout_marginTop="@dimen/my15dp"
                android:text="@string/BMI"
                android:textSize="@dimen/my16dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>