<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my60dp"
        android:background="@color/colorBlack">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/main_mode_distance"
            android:textSize="@dimen/my30dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relative_DistanceDialog"
        android:layout_width="@dimen/my420dp"
        android:layout_height="@dimen/my320dp"
        android:background="@color/colorBlack"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/kilometer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my60dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBlack2"
            android:gravity="center"
            android:text="@string/KM"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/my24dp"/>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/my110dp"
            android:layout_marginTop="@dimen/my80dp"
            android:layout_centerHorizontal="true"
            >
            <CheckedTextView
                android:id="@+id/tv_KM"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlack"/>
            <CheckedTextView
                android:id="@+id/tv_HM"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:typeface="sans"
                android:text="."
                android:textSize="@dimen/my80dp"
                android:textColor="@color/colorWhite"/>
            <CheckedTextView
                android:id="@+id/tv_M"
                android:layout_width="@dimen/my60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="@dimen/my80dp"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlack"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/my30dp"
            android:layout_below="@+id/linearLayout"
            android:gravity="center"
            android:layout_marginTop="@dimen/my10dp"
            android:text="@string/DistanceRange"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/my18dp"/>/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/my80dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/btn_Add"
                android:layout_width="@dimen/my210dp"
                android:layout_height="@dimen/my90dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBlack2">
                <ImageView
                    android:layout_width="@dimen/my40dp"
                    android:layout_height="@dimen/my40dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_add"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_Sub"
                android:layout_width="@dimen/my210dp"
                android:layout_height="@dimen/my90dp"
                android:layout_toRightOf="@+id/btn_Add"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBlack2">
                <ImageView
                    android:layout_width="@dimen/my40dp"
                    android:layout_height="@dimen/my40dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_sub"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/Distance_Start_Run"
        android:layout_width="@dimen/my160dp"
        android:layout_height="@dimen/my78dp"
        android:layout_marginLeft="@dimen/my10dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:text="@string/Start"
        android:textSize="@dimen/my24dp"
        android:layout_alignBottom="@+id/Relative_DistanceDialog"
        android:layout_toEndOf="@+id/Relative_DistanceDialog"
        android:layout_marginStart="15dp" />
</RelativeLayout>