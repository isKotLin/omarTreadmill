<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/my540dp"
        android:layout_height="@dimen/my180dp"
        android:layout_marginBottom="@dimen/my40dp">

        <Button
            android:id="@+id/language_Chinese"
            android:layout_width="@dimen/my0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/my5dp"
            android:text="中文"
            android:textSize="@dimen/my28dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"/>

        <Button
            android:id="@+id/language_English"
            android:layout_width="@dimen/my0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/my5dp"
            android:layout_marginRight="@dimen/my5dp"
            android:gravity="center"
            android:text="English"
            android:textSize="@dimen/my28dp"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen" />

        <Button
            android:id="@+id/language_France"
            android:layout_width="@dimen/my0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/my5dp"
            android:gravity="center"
            android:text="Français"
            android:textAllCaps="false"
            android:textSize="@dimen/my28dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen" />
    </LinearLayout>
</LinearLayout>